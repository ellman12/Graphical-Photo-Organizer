<Window x:Class="Graphical_Photo_Organizer.GPO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphical_Photo_Organizer"
        mc:Ignorable="d"
        Title="Graphical Photo Organizer" Width="1000" Height="750" ResizeMode="NoResize">
    <Grid Width="1000" Height="750">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Header="Setup" FontSize="14">
            <StackPanel Margin="4">
                <Button Content="Choose Source Folder" VerticalAlignment="Top" Height="26" Click="Button_Click"/>
                <Label Content="dir" Padding="2,0,0,0" Margin="0,2,0,8"/>
                <Button Content="Choose Destination Folder" VerticalAlignment="Top" Height="26"/>
                <Label Content="dir" Padding="2,0,0,0" Margin="0,2,0,8"/>
                <Button Content="Begin Sorting" Height="26"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="4" Grid.RowSpan="7" Header="Current Item" FontSize="14">
            <StackPanel Name="grid1" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Label Content="Filename"/>
                <TextBox Name="filenameTextBox" Margin="0,0,0,3" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="OG: " Margin="0,0,50,0"/>
                    <Label Content="src"/>
                </StackPanel>

                <Label Content="New: " Margin="0,0,0,3"/>
                <Calendar FontWeight="SemiBold"/>

                <StackPanel Orientation="Horizontal" Margin="4,0,4,4">
                    <Button Content="Skip" Height="26" Width="88"/>
                    <Button Content="Next" Height="26" Width="88" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="4,0,4,0">
                    <Button Content="Delete" Height="26" Width="88"/>
                    <Button Content="Reset" Height="26" Width="88" Margin="4,0,0,0"/>
                </StackPanel>
                
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
