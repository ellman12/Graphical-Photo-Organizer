<Window x:Class="Graphical_Photo_Organizer.GPO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphical_Photo_Organizer"
        mc:Ignorable="d"
        Title="Graphical Photo Organizer" Width="1000" Height="634" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="setupGroupBox" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="4" Header="Setup" FontSize="14">
            <StackPanel Margin="4">
                <Button x:Name="chooseSrcBtn" Content="Choose Source Folder" VerticalAlignment="Top" Height="26" Click="chooseSrcBtn_Click"/>
                <Label x:Name="srcDirLabel" Content="dir" Padding="2,0,0,0" Margin="0,2,0,8"/>
                <Button x:Name="chooseDestBtn" Content="Choose Destination Folder" VerticalAlignment="Top" Height="26" Click="chooseDestBtn_Click"/>
                <Label x:Name="destDirLabel" Content="dir" Padding="2,0,0,0" Margin="0,2,0,8"/>
                <Button x:Name="beginBtn" Content="Begin Sorting" Height="26" Click="beginBtn_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="currentItemGroupBox" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="8" Header="Current Item" FontSize="14" IsEnabled="False">
            <StackPanel UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Label Content="Filename"/>
                <TextBox TextChanged="filenameTextBox_TextChanged" Name="filenameTextBox" Margin="0,0,0,3" />
                <StackPanel Orientation="Horizontal">
                    <Label Name="ogDateTakenLabel" Content="OG: " Margin="0,0,50,0"/>
                    <Label Name="dateTakenSrcLabel" Content="src"/>
                </StackPanel>

                <Label Name="newDateTakenLabel" Content="New: " Margin="0,0,0,3"/>
                <Calendar SelectedDatesChanged="DatePicker_OnSelectedDatesChanged" Name="datePicker" FontWeight="SemiBold"/>

                <StackPanel Orientation="Horizontal" Margin="4,0,4,4">
                    <Button Content="Skip" Height="26" Width="88"/>
                    <Button Name="nextItemBtn" Click="nextItemBtn_Click" Content="Next" Height="26" Width="88" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="4,0,4,0">
                    <Button Content="Delete" Height="26" Width="88"/>
                    <Button Content="Reset" Height="26" Width="88" Margin="4,0,0,0"/>
                </StackPanel>

            </StackPanel>
        </GroupBox>

        <Label Grid.Column="1" Grid.Row="12" FontSize="14" VerticalAlignment="Center" Content="OG Path: " />
        <Label x:Name="originalPathLabel" Grid.Column="2" Grid.Row="12" FontSize="14" VerticalAlignment="Center" Content="path" />
        <Label Grid.Column="1" Grid.Row="13" FontSize="14" VerticalAlignment="Center" Content="New Path: " />
        <Label x:Name="destPathLabel" Grid.Column="2" Grid.Row="13" FontSize="14" VerticalAlignment="Center" Content="path" />

        <MediaElement Name="itemPreview" Grid.Column="4" HorizontalAlignment="Left" Height="455" Margin="4,12,0,0" VerticalAlignment="Top" Width="750" Grid.RowSpan="11"/>

        <StackPanel Grid.Column="4" Grid.Row="10" Orientation="Horizontal" >
            <Button FontSize="14" Content="Play/Pause" Height="26" Width="100" Margin="4"/>
            <Button FontSize="14" Content="Mute/Unmute" Height="26" Width="100" Margin="4"/>
            <CheckBox Content="Auto Play" Height="15" Margin="37,4,4,4"/>
            <CheckBox Content="Unmute on Next" Height="15" Margin="4"/>
        </StackPanel>

        <Label Name="statsLabel" Grid.Column="4" Grid.Row="11" FontSize="14" VerticalAlignment="Center" Content="Stats" />
    </Grid>
</Window>
